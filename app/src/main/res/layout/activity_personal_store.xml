<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaydeep.rail2.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:elevation="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/personal_store" />

            <TextView
                android:id="@+id/personal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Personal Store"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:text="Whether Loco Pilot has following personal stores?"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            android:text="G and SR book with all C/s updated."
            android:textColorLink="@android:color/holo_orange_dark"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb1"
            android:layout_marginTop="10dp"
            android:text="2 red and 1 green flag in good condition."
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb2"
            android:layout_marginTop="10dp"
            android:text="Detonators â€“ 10 Nos. Date of manufacture"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb3"
            android:layout_marginTop="10dp"
            android:text="One tri colour hand signal torch."
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb4"
            android:layout_marginTop="10dp"
            android:text="Tool box with standard tools."
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb5"
            android:layout_marginTop="10dp"
            android:text="Signal location book"
            android:textSize="14sp" />


        <Button
            android:id="@+id/ok"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#ED7425"
            android:elevation="2dp"
            android:text="SAVE"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>
